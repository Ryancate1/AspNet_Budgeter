@model IEnumerable<rcate_FinancialPortal.Models.Code_First.Budget>

@{
    ViewBag.Title = "Index";
}

<h2><b>Budgets</b></h2>

<p>
    <a class="btn btn-warning pull-right" href="@Url.Action("Create", "Budgets")">Create New Budget</a>
</p>

<br />
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <center>
            <h4>
                <b>Budgets</b>
            </h4>
        </center>
    </div>
    <div class="panel-body">
        @if (Model.Count() == 0)
        {
            <h6><b>You have no transactions.</b></h6>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Amount
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @if (item.Description == null)
                            {
                                <i>No Description</i>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Description)
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @string.Format("{0:C}", item.Amount)
                        </td>
                        <td>
                            <a style="color:black" title="Edit" href="@Url.Action("Edit", "Budgets", new { id = item.Id })"><span class="fa fa-pencil"></span></a>
                            &nbsp;
                            <a style="color:red;margin-left:3px" title="Delete" href="@Url.Action("Delete", "Budgets", new { id = item.Id })"><span class="fa fa-trash-o"></span></a>
                        </td>
                    </tr>
                }

            </table>
        }

    </div>
    <div class="panel-footer">
    </div>
</div>
