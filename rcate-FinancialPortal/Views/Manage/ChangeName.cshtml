@model rcate_FinancialPortal.Models.ChangeNameViewModel
@{
    ViewBag.Title = "ChangeName";
}

<center>
<h2>
    <b>Change Display Name</b>
</h2>

@using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                <br />
                <input name="NewName" style="text-align:center;width:250px" placeholder="@Model.NewName" />
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Change Name" class="btn btn-primary btn-sm" />
            </div>
        </div>

}
</center>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}